@{
    ViewBag.Title = "Author Register";
}

<script src="~/Scripts/knockout-3.3.0.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/KnockoutModels/AuthorRegisterViewModel.js"></script>

<div class="page-header">
    <h2 class="text-center">Author Registration</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">Register new author</h2>
            </div>

            <div class="panel-body" data-bind="with: addAuthorViewModel">
                @Html.Partial("_RegisterAuthor")
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Authors</h2>
            </div>
            <div class="panel-body" data-bind="with: authorListViewModel">
                @Html.Partial("_AuthorList")
            </div>
        </div>
    </div>

</div> 